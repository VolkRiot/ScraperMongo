<section>
  <nav>
    <div class="nav-wrapper amber darken-1">
      <a href="/scrape" class="brand-logo">Scrapy</a>
      <ul id="nav-mobile" class="left hide-on-med-and-down">
        <li><a href="/">Home</a></li>
        <li><a href="#">Saved Articles</a></li>
        <li>
          <a href="/scrape" class="waves-effect waves-light btn deep-orange accent-3">SCRAPE NEW ARTICLES!</a>
        </li>
      </ul>
    </div>
  </nav>
</section>

  <div class="card blue darken-1 jumbotron">
    <div class="card-content white-text">
      <!-- <span class="card-title">Card Title</span> -->
    </div>
  </div>

<section id="articles">
  <div class="container">
    <div class="row">
      <div class="col m12">

        {{#each articles}}
          <div class="article section" style="overflow: auto">
            <div class="article-panel">
              <a href="{{this.link}}" target="_blank">
              <img class="left" src="{{this.photoUrl}}" data-caption="{{this.title}}">
              </a>
              <div class="text-block left">
                <a href="{{this.link}}" target="_blank">
                <h5 class="truncate left no-margins">{{this.title}}</h5>
                </a>
                <a href="#" class="right waves-effect waves-light btn deep-orange accent-3">Save Article</a>
                <div class="row">
                  <div class="col m12 left">
                    <em class="no-margins left">{{this.source}}</em><span class="left span-between"> - </span><p class="no-margins left">{{this.posted}}</p>
                  </div>

                </div>
              </div>

            </div>



            <!-- if (skip === false) {
              newArticles.push({
                title,
                source,
                posted,
                photoUrl,
              }); -->

          </div>
        {{/each}}

      </div>
    </div>
  </div>
</section>
